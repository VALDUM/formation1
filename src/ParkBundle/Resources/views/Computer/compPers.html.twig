{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} Ordinateurs {% endblock %}

{% block body %}
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>{{'park.computer.label.name'|trans}}</th>
            <th>Ip</th>
            <th>Enabled</th>
            <th>Person</th>
        </tr>
        {% for computer in computers %}
            <tr>
                <td>{{ computer.id }}</td>
                <td>{{ computer.name|computer_name}}</td>
                <td>{{ computer.ip }}</td>
                <td>{{ computer.enabled|computer_status}}</td>
                {% if computer.person is not null %}
                    <td>{{ computer.person.lastname }} {{ computer.person.firstname }}</td>
                {% else %}
                    <td><i>No person</i></td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de donn√©es</td>
            </tr>
        {% endfor %}
    </table>
{% endblock body %}




